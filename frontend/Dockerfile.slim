# Slim frontend: expects Flutter build done locally.
# Run first: cd frontend && flutter build web
# Then: docker build -f Dockerfile.slim -t tempconv-frontend .
FROM nginx:alpine

RUN rm /etc/nginx/conf.d/default.conf
COPY nginx.conf /etc/nginx/conf.d/default.conf
COPY build/web /usr/share/nginx/html

EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
